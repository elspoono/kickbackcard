@css {@import url('http://fonts.googleapis.com/css?family=Open+Sans');}
@css {@import url('http://fonts.googleapis.com/css?family=Luckiest+Guy');}
@import "reset.css"

font-size = 16px
font = font-size "Open Sans", Helvetica, Arial, sans-serif
font2 = 'Luckiest Guy'

very-dark = #3f3e3d
dark = #000
semi-light = #aaa
very-light = #fff
light = #FFF
very-dark-alt = #4e7a3c
semi-dark = #6f6f6e
red = #FCC
green = #CFC
yellow = #FFC
darkShift = 60
boxbg = rgba(190,190,190,.1)

attention = #00B7FF

box-shadow(n)
  -moz-box-shadow: 0px 0px n semi-light
  -webkit-box-shadow: 0px 0px n semi-light
  box-shadow: 0px 0px n semi-light

border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n
opacity(n)
  opacity n
absolute()
  display none
  position absolute
  top 0
  left 0

body
  font font
  background very-dark
  color very-light
  h1,h2,h3
    font-family font2
    text-transform uppercase
    font-weight normal
  input,select
    font font
  a
    color light
  .bg2
    absolute()
    width 100%
    margin-top 108px
    height 130px
    background semi-dark
    display block
    z-index -1
  .header
    background #FFF
    color very-dark
    a
      color very-dark-alt
    .container
      padding 15px 30px
      overflow hidden
      .logo
        background url('/images/KBHeader.png') no-repeat left top
        height 78px
        width 320px
        float left
        cursor pointer
      .navigation
        float right
        overflow hidden
        li
          float left
          margin 0 0 0 15px
        .users .users,.vendors .vendors
          color #333
          text-decoration none
  .body
    h1
      font-size 3em
      line-height 2em
    h2
      font-size 3em
      line-height 2em
    i
      font-style italic
    p
      margin 15px 0
    a
      color attention
    .container
      background boxbg
      box-shadow(4px)
    .user-row
      background boxbg
      box-shadow(4px)
      overflow hidden
      li
        width 250px
        float left
        padding 10px
      margin 30px 0
    .add-row
      margin 60px 0
      text-align center

  .container
    max-width 900px
    margin 0 auto
    padding 30px
  .footer
    text-align center
    font-size .8em
  .tooltip
    border 1px solid darken(yellow,darkShift)
    border-radius(3px)
    height 20px
    line-height 20px
    padding 2px 8px
    background yellow
    color dark
    font-size .7em
    margin-top -29px
    absolute()
  .modal
    background dark
    opacity(.7)
    height 100%
    width 100%
    absolute()
  .window
    background #fff
    color very-dark
    border-radius(15px)
    height 235px
    max-width 500px
    padding 30px
    absolute()
    h2
      font-size 1.2em
    fieldset
      .fields
        margin 15px 0
        overflow hidden
        label
          width 150px
          display block
          float left
        .input
          width 240px
          display block
          float right
          border 1px solid semi-dark
          border-radius(4px)
          padding 4px 8px
          margin 0
        .error
          border 1px solid darken(red,darkShift)
          background red
        .valid
          border 1px solid darken(green,darkShift)
          background green
        .loading
          border 1px solid darken(very-light,darkShift)
          background very-light
    .buttons
      overflow hidden
      bottom 0
      left 0
      width 100%
      position absolute
      .submit,.cancel
        font-size 1em
        margin 30px
        background very-light
        color dark
        border 1px solid semi-dark
        border-radius(4px)
      .submit
        float right
        font-weight bold
        cursor pointer
      .cancel
        float left
  .container .modal
    display block
  .container .window
    display block
    position relative
    margin 0 auto
  .assets
    display none