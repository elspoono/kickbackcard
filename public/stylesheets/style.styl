font = font-size "Open Sans", Helvetica, Arial, sans-serif
font2 = 'Luckiest Guy'

very-dark = #2d6031
dark = #000
semi-light = #aaa
very-light = #fff
light = #FFF
very-dark-alt = #4e7a3c
semi-dark = #6f6f6e
