@import "reset.css"

font-size = 14px
font = font-size "Lucida Grande", Helvetica, Arial, sans-serif

very-dark = #333
dark = #000
very-light = #eee
light = #BBF
very-dark-alt = #669
semi-dark = #999

attention = #00B7FF

border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n
opacity(n)
  opacity n
absolute()
  display none
  position absolute
  top 0
  left 0

body
  font font
  background very-dark
  color very-light
  a
    color light
  .header
    background #FFF
    color very-dark
    a
      color very-dark-alt
    .container
      padding 15px 0
      overflow hidden
      .logo
        background url('/images/KBlogo114x114.png') no-repeat left top
        height 114px
        width 114px
        float left
      .navigation
        float right
        overflow hidden
        li
          float left
          margin 0 0 0 15px
  .body
    h1
      font-size 2em
      line-height 2.5em
    i
      font-style italic
    p
      margin 15px 0
  .container
    max-width 900px
    margin 0 auto
    padding 30px 0
  .footer
    text-align center
    font-size .8em

  .modal
    background dark
    opacity(.7)
    height 100%
    width 100%
    absolute()

  .window
    background #fff
    color very-dark
    border-radius(15px)
    height 150px
    width 500px
    padding 30px
    absolute()
    h2
      font-size 1.2em
    fieldset
      .fields
        margin 15px 0
        overflow hidden
        label
          width 150px
          display block
          float left
        .input
          width 300px
          display block
          float right
          border 1px solid semi-dark
          border-radius(4px)
          padding 4px 8px
          margin 0
    .buttons
      overflow hidden
      position absolute
      bottom 0
      left 0
      width 100%
      .submit,.cancel
        font-size 1em
        margin 30px
        background very-light
        color dark
        border 1px solid semi-dark
        border-radius(4px)
      .submit
        float right
        font-weight bold
        cursor pointer
      .cancel
        float left